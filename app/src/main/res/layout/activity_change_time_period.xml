<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeTimePeriod"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/periodTV"
                android:text="Change Time Period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/earlyDateET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:hint="Enter the start date"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/lateDateET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:hint="Enter the end date"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/setBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Set Period"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>